<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/option_list_add" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_24dp"
        android:layout_below="@+id/option_list_add"
        android:layout_alignParentEnd="true"
        android:id="@+id/option_list_remove" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="18sp"
        android:id="@+id/option_list_title"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/option_list_brief"
        android:layout_above="@+id/option_list_remove"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/option_list_unit_price"
        android:layout_alignTop="@+id/option_list_remove"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/option_list_cnt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/option_list_cnt"
        android:layout_above="@+id/option_list_remove"
        android:layout_toStartOf="@+id/option_list_add" />
</RelativeLayout>