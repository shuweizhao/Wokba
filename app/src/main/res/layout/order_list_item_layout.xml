<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="8dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:id="@+id/order_list_item_pic"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="New Text"
        android:id="@+id/order_list_item_title"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/order_list_item_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/order_list_item_store_name"
        android:layout_below="@+id/order_list_item_title"
        android:layout_toEndOf="@+id/order_list_item_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/order_list_item_condition"
        android:layout_below="@+id/order_list_item_store_name"
        android:layout_toEndOf="@+id/order_list_item_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/order_list_item_unit_price"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/order_list_item_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/order_list_item_count"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/order_list_item_condition"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/order_list_item_unit"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/order_list_item_count" />

</RelativeLayout>